<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kütüphane Uygulaması</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Kütüphane İşlemleri</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/Anasayfa/Index">Anasayfa</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Kitap İşlemleri
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Book/AddBook">Kitap Ekle</a></li>
                        <li><a href="/Book/ListBook">Kitap Sil/Güncelle</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Öğrenci İşlemleri
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Student/AddStudent">Öğrenci Ekle</a></li>
                        <li><a href="/Student/ListStudent">Öğrenci Sil/Güncelle</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Kitap-Öğrenci İşlemleri
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Entrust/Entrusted">Kitap Ödünç Verme</a></li>
                        <li><a href="/Entrust/ListEntrust">Kitap Iade Alma</a></li>
                        <li><a href="/Entrust/ListEntrust">Kitap Ödünç Listesi</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Staff/SignOut">Çıkış</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>