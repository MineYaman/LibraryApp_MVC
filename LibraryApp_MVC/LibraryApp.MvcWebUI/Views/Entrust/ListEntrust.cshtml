
@model List<LibraryApp.Entities.EntityModels.Emanet>

@{
    ViewBag.Title = "ListEntrust";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Kitap Numarası</th>
            <th scope="col">Kitap Adı</th>
            <th scope="col">Öğrenci Numarası</th>
            <th scope="col">Öğrenci Adı</th>
            <th scope="col">Öğrenci Soyadı</th>
            <th scope="col">Ödünç Verilme Tarihi</th>
            <th scope="col">Kitabı İade Al</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KtpNo</td>
                <td>@item.KtpAdi</td>
                <td>@item.OgrNo</td>
                <td>@item.OgrAdi</td>
                <td>@item.OgrSoyadi</td>
                <td>@item.KitapOduncVerilmeTarihi</td>
                <td>
                    <a href="/Entrust/Received/@item.EmanetID" class="btn btn-warning btn-xs ">Kitabı İade Al</a>
                </td>
            </tr>
        }

    </tbody>
</table>

