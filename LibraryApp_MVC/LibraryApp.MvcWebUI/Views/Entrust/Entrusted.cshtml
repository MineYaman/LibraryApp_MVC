
@model LibraryApp.Entities.EntityModels.Emanet

@{
    ViewBag.Title = "Entrusted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container">
        <div class="card card-container">
                @using (Html.BeginForm("Entrusted", "Entrust", FormMethod.Post, new { @id = "frmEntrust" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Emanet</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.OgrNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.OgrNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OgrNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.KtpNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.KtpNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KtpNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.KitapOduncVerilmeTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(Model => Model.KitapOduncVerilmeTarihi, new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(model => model.KitapOduncVerilmeTarihi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Ödünç Ver" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
        </div><!-- /card-container -->
    </div><!-- /container -->
</body>

