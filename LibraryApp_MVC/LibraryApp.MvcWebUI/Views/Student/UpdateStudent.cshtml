@model LibraryApp.Entities.EntityModels.Ogrenci

@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

    <div class="container">
        <div class="card card-container">
            @using (Html.BeginForm("UpdateStudent", "Student", FormMethod.Post, new { @id = "frmOgrenciGuncelle" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Ogrenci</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.OgrenciID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.OgrenciAdi, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.OgrenciAdi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OgrenciAdi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OgrenciSoyadi, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.OgrenciSoyadi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OgrenciSoyadi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Güncelle" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

            <br />
            <div>
                @Html.ActionLink("Ögrenci listesine geri dön", "ListStudent")
            </div>

        </div><!-- /card-container -->
    </div><!-- /container -->
</body>



