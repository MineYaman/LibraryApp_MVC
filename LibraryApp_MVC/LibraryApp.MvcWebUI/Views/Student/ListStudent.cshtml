
@model List<LibraryApp.Entities.EntityModels.Ogrenci>

@{
    ViewBag.Title = "ListStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Öğrenci Numarası</th>
            <th scope="col">Öğrenci Adı</th>
            <th scope="col">Öğrenci Soyadı</th>
            <th scope="col">Ceza Puanı</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OgrenciNo</td>
                <td>@item.OgrenciAdi</td>
                <td>@item.OgrenciSoyadi</td>
                <td>@item.OgrenciCezaPuani</td>
                <td>
                    <a href="/Student/UpdateStudent/@item.OgrenciID" class="btn btn-primary btn-xs ">Güncelle</a>
                </td>
                <td>
                    <a href="/Student/DeleteStudent/@item.OgrenciID" class="btn btn-danger btn-xs">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>

